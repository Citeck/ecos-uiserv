{
  "id": "ECOS_FORM",
  "formKey": "module_form",
  "title": {
    "en": "Form ui"
  },
  "description": {
    "en": "Form to edit other forms"
  },
  "customModule": "js/citeck/modules/eform/ecos-form-custom",
  "typeRef": "",
  "width": "lg",
  "i18n": {
    "ru": {
      "Extra Small": "Очень маленькая",
      "Small": "Маленькая",
      "Medium": "Средняя",
      "Large": "Большая",
      "Extra Large": "Очень большая",
      "Full Screen": "Полноэкранная"
    },
    "en": {
      "Extra Small": "Extra Small",
      "Small": "Small",
      "Medium": "Medium",
      "Large": "Large",
      "Extra Large": "Extra Large",
      "Full Screen": "Full Screen"
    }
  },
  "definition": {
    "display": "form",
    "components": [
      {
        "label": {
          "en": "Form identifier",
          "ru": "Идентификатор формы"
        },
        "key": "moduleId",
        "validate": {
          "required": true
        },
        "defaultValue": "",
        "refreshOn": [],
        "optionalWhenDisabled": false,
        "type": "textfield",
        "input": true
      },
      {
        "label": {
          "ru": "Название формы",
          "en": "Form name"
        },
        "type": "textfield",
        "input": true,
        "key": "title",
        "validate": {
          "required": true
        },
        "defaultValue": "",
        "conditional": {
          "show": null,
          "when": null
        }
      },
      {
        "label": {
          "ru": "Ключ формы",
          "en": "Form key"
        },
        "type": "textfield",
        "input": true,
        "key": "formKey",
        "defaultValue": "",
        "logic": [
          {
            "name": "Disable for system forms",
            "trigger": {
              "type": "javascript",
              "javascript": "result = instance.parent.ecos.custom.isSystemForm();"
            },
            "actions": [
              {
                "name": "Disable field",
                "type": "property",
                "property": {
                  "label": "Disabled",
                  "value": "disabled",
                  "type": "boolean"
                },
                "state": "true"
              }
            ]
          }
        ],
        "conditional": {
          "show": null,
          "when": null
        }
      },
      {
        "label": {
          "ru": "Редактируемый тип данных",
          "en": "Edited data type"
        },
        "journalId": "ecos-types",
        "key": "typeRef",
        "type": "selectJournal",
        "input": true
      },
      {
        "label": {
          "ru": "Ширина формы",
          "en": "Form width"
        },
        "dataSrc": "values",
        "data": {
          "values": [
            {
              "label": "Extra Small",
              "value": "xs"
            },
            {
              "label": "Small",
              "value": "sm"
            },
            {
              "label": "Medium",
              "value": "m"
            },
            {
              "label": "Large",
              "value": "lg"
            },
            {
              "label": "Extra Large",
              "value": "extra-lg"
            },
            {
              "label": "Full Screen",
              "value": "full"
            }
          ]
        },
        "defaultValue": "lg",
        "key": "width",
        "type": "ecosSelect",
        "input": true
      },
      {
        "label": {
          "ru": "Описание формы",
          "en": "Form description"
        },
        "key": "description",
        "defaultValue": "",
        "refreshOn": [],
        "optionalWhenDisabled": false,
        "type": "textarea",
        "input": true
      },
      {
        "columns": [
          {
            "width": 3,
            "type": "column",
            "input": false,
            "key": "column1",
            "components": [
              {
                "label": {
                  "ru": "Отменить",
                  "en": "Cancel"
                },
                "action": "event",
                "state": "",
                "block": true,
                "type": "button",
                "input": true,
                "key": "cancel",
                "showValidations": false,
                "event": "cancel",
                "conditional": {
                  "show": null,
                  "when": null
                }
              }
            ],
            "sm": 9,
            "md": 3,
            "clearOnHide": true,
            "conditional": {
              "show": null,
              "when": null
            },
            "index": 0
          },
          {
            "components": [
              {
                "label": {
                  "ru": "Редактировать форму",
                  "en": "Edit form"
                },
                "action": "custom",
                "state": "",
                "showValidations": false,
                "custom": "form.ecos.custom.showFormEditor()",
                "block": true,
                "disabled": true,
                "type": "button",
                "input": true,
                "key": "editform",
                "defaultValue": false,
                "logic": [
                  {
                    "name": "Enable",
                    "trigger": {
                      "type": "javascript",
                      "javascript": "result = !!_.get(instance, 'root.ecos.custom.showFormEditor');"
                    },
                    "actions": [
                      {
                        "name": "Enable",
                        "type": "property",
                        "property": {
                          "label": "Disabled",
                          "value": "disabled",
                          "type": "boolean"
                        },
                        "state": "false"
                      }
                    ]
                  }
                ],
                "event": "",
                "url": "",
                "reorder": false
              }
            ],
            "width": 3,
            "type": "column",
            "input": false,
            "key": "column2",
            "sm": 9,
            "md": 3,
            "clearOnHide": true,
            "conditional": {
              "show": null,
              "when": null
            },
            "index": 1
          },
          {
            "components": [
              {
                "label": {
                  "en": "Localization",
                  "ru": "Локализация"
                },
                "action": "custom",
                "state": "",
                "showValidations": false,
                "custom": "form.ecos.custom.showLocaleEditor()",
                "block": true,
                "disabled": true,
                "key": "localization",
                "logic": [
                  {
                    "name": "Enable",
                    "trigger": {
                      "type": "javascript",
                      "javascript": "result = !!_.get(instance, 'root.ecos.custom.showLocaleEditor');"
                    },
                    "actions": [
                      {
                        "name": "Enable",
                        "type": "property",
                        "property": {
                          "label": "Disabled",
                          "value": "disabled",
                          "type": "boolean"
                        },
                        "state": "false"
                      }
                    ]
                  }
                ],
                "type": "button",
                "input": true
              }
            ],
            "width": 3,
            "type": "column",
            "input": false,
            "key": "column3",
            "sm": 9,
            "md": 3,
            "clearOnHide": true,
            "conditional": {
              "show": null,
              "when": null
            },
            "index": 2
          },
          {
            "sm": 9,
            "md": 3,
            "type": "column",
            "input": false,
            "key": "column4",
            "width": 3,
            "components": [
              {
                "label": {
                  "ru": "Отправить",
                  "en": "Submit"
                },
                "state": "",
                "theme": "primary",
                "block": true,
                "disableOnInvalid": true,
                "type": "button",
                "key": "submit",
                "input": true,
                "conditional": {
                  "show": null,
                  "when": null
                }
              }
            ],
            "clearOnHide": true,
            "conditional": {
              "show": null,
              "when": null
            },
            "index": 3
          }
        ],
        "autoAdjust": true,
        "key": "columns",
        "type": "columns",
        "input": false
      }
    ]
  },
  "attributes": {}
}
