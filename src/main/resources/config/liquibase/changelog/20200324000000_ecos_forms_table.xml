            <column name="ext_id" type="VARCHAR" />
            <column name="type_ref" type="VARCHAR" />
            <column name="form_key" type="VARCHAR" />
            <column name="width" type="VARCHAR" />

            <column name="custom_module" type="VARCHAR" />

            <column name="definition" type="VARCHAR" />
            <column name="i18n" type="VARCHAR" />
            <column name="attributes" type="VARCHAR" />

            <column name="created_date" type="TIMESTAMP" />
            <column name="created_by" type="VARCHAR(50)" />
            <column name="last_modified_date" type="TIMESTAMP" />
            <column name="last_modified_by" type="VARCHAR(50)" />

        </createTable>

    </changeSet>

</databaseChangeLog>
